---
type Props = {
    text: string;
    target: string;
}

const { text, target } = Astro.props as Props;
---

<a href={ target } class="inline-flex items-center -mx-1 text-emerald-500 dark:text-emerald-400">
    <span class="relative overflow-clip mx-1 after:absolute after:left-0 after:bottom-0 after:w-0 after:h-0.5 after:bg-emerald-500 after:dark:bg-emerald-400 after:transition-all after:duration-200 hover:after:w-full">{ text }</span>

    <svg class="w-4 h-4 mx-1 rtl:-scale-x-100" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M12.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"> </path>
    </svg>
</a>