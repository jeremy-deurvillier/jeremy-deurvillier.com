---
type Props = {
    title: string;
    target: string;
    image?: string;
}

const { title, target, image = '/img/coming-soon.jpg' } = Astro.props as Props;

const style: string = ` background-image:url('${image}');`;
---

<div class="flex items-end overflow-hidden bg-cover bg-center rounded-lg h-96" style={ style }>
    <div class="w-full px-8 py-4 overflow-hidden rounded-b-lg backdrop-blur-sm bg-neutral-700/60">
        <h3 class="mt-4 text-xl font-semibold text-white capitalize">
            { title }
        </h3>
        <p class="mt-2 text-lg tracking-wider">
            <a href={ target } class="relative overflow-clip hover:text-white text-emerald-400 transition-colors duration-200" target="_blank">
                <span class="absolute inline-flex items-end left-0 bottom-0 top-0 right-0 bg-transparent after:block after:bg-emerald-400 after:w-0 after:h-0.5 hover:after:w-full after:transition-all after:duration-200"></span>
                Voir le site
            </a>
        </p>
    </div>
</div>
