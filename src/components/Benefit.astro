---
import ReadMore from '../components/ReadMore.astro';

type Props = {
    title: string;
    url: string;
};

const { title, url } = Astro.props as Props;

---

<div class="flex flex-col space-y-3">
    <span class="self-start inline-block p-3 text-blue bg-ghost rounded-full dark:text-ghost dark:bg-blue">
        <slot name="icon" />
    </span>

    <h3 class="text-xl font-semibold text-neutral-700 capitalize dark:text-white">
        { title }
    </h3>

    <p class="text-neutral-500 dark:text-neutral-300">
        <slot name="text" />
    </p>

    <div class="flex-grow inline-flex items-end">
        <ReadMore text="En savoir plus" target={ url } />
    </div>
</div>