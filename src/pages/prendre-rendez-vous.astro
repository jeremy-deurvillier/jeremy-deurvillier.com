---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import H2 from '../components/H2.astro';
import About from '../components/About.astro';
---

<Layout path="/prendre-rendez-vous" title="Prendre rendez-vous" description="Réservez votre créneau et discutons de vos projets.">
	<section slot="header" class="min-h-[80vh] flex items-center justify-center">
		<div class="py-8 px-4 mx-auto max-w-screen-xl text-center lg:py-16">
			<h1 class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-neutral-900 md:text-5xl lg:text-6xl dark:text-white">
                Discutons de <strong class="text-emerald-400">vos besoins</strong> lors d’un <strong class="text-emerald-400">rendez-vous personnalisé</strong>
			</h1>
			<p class="mb-8 text-lg font-normal text-neutral-500 lg:text-xl sm:px-16 lg:px-48 dark:text-neutral-400">
                Prenez un rendez-vous pour discuter de votre projet, je vous guide dans le choix d'une solution adaptée.
			</p>
			<div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
				<Button tag="link" style="secondary" target="#creneaux-disponibles" text="Voir les créneaux">
					<svg class="w-3.5 h-3.5 ms-2 translate-y-0.5 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
						<path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
					</svg>
				</Button>
			</div>
		</div>
	</section>

	<section class="bg-white min-h-[50vh] dark:bg-neutral-900 pb-10">
		<div id="creneaux-disponibles" class="container px-6 py-10 mx-auto">
			<H2 text="un créneau" highlighted="Réserver " order="first" />

			<div class="grid grid-cols-1 gap-8 mt-8 xl:mt-12 xl:gap-12 lg:grid-cols-2">
                <p class="text-neutral-700 dark:text-neutral-200">Aucun créneau disponible pour le moment.</p>
            </div>
        </div>
    </section>

	<About />

</Layout>